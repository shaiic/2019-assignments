<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- N.B. SpeechNativePlatform is set by including project -->
  <PropertyGroup>
    <SpeechPackageRoot>$(MSBuildThisFileDirectory)..\</SpeechPackageRoot>
    <SpeechNativeLibDir>$(SpeechPackageRoot)build\native\$(SpeechNativePlatform)\Release</SpeechNativeLibDir>
  </PropertyGroup>
  <PropertyGroup>
    <BuildDependsOn>
      SpeechPlatformCheck;
      $(BuildDependsOn);
    </BuildDependsOn>
  </PropertyGroup>
  <Target Name="SpeechPlatformCheck">
    <Error Condition="'$(Platform.ToLower())' == 'anycpu'" Text="Cognitive Services Speech SDK doesn't support 'Any CPU' as a platform." />
  </Target>
</Project>
