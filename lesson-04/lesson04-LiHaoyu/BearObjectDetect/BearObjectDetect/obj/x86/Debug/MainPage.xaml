<Page
    x:Class="BearObjectDetect.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BearObjectDetect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="12">
            <TextBlock Text="输入要识别的图片地址:" Margin="12"></TextBlock>
            <TextBox x:ConnectionId='2' x:Name="tbImageUrl" Margin="12"></TextBox>
            <Button x:ConnectionId='3' x:Name="tbRun" Content="识别"                       Margin="12"></Button>
            <TextBlock x:ConnectionId='4' x:Name="tbBearType" Margin="12"></TextBlock>
            <Grid BorderBrush="Gray" BorderThickness="1" Margin="12" >
                <Image x:ConnectionId='5' x:Name="imgBear"  Stretch="Uniform"                                                                      Width="800" Height="600"></Image>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

